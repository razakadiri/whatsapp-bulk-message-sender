# Production Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/whatsapp-bulk-sender
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-password

# JWT Configuration (Generate secure random strings)
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# WhatsApp API Configuration
WHATSAPP_PROVIDER=360dialog
WHATSAPP_API_URL=https://api.360dialog.com/v1
WHATSAPP_API_KEY=your-whatsapp-api-key-here
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret-here

# Alternative Providers (uncomment to use)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_WHATSAPP_NUMBER=your-twilio-whatsapp-number
# GUPSHUP_API_KEY=your-gupshup-api-key
# GUPSHUP_SOURCE_NUMBER=your-gupshup-source-number

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Frontend Configuration
REACT_APP_API_URL=https://yourdomain.com/api
REACT_APP_SOCKET_URL=https://yourdomain.com

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
